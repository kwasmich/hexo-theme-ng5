<article>
  <header>
    <% var photos = (Array.isArray(page.photos)) ? page.photos : [page.photos]; %>
    <% if (page.photos && photos && photos.length) { %>
      <figure>
        <% photos.forEach(function(photo, i) { %>
          <img src="<%= photo %>">
        <% }) %>
      </figure>
    <% } %>
    <h1><%= page.title %></h1>
    <small>
      <% if (page.date.unix() != page.updated.unix()) { %>
        <time datetime="<%= date_xml(page.date) %>"><%= date(page.date, null) %></time>
      <% } %>
      <% if ((page.date.unix() != page.updated.unix()) && page.author) { %>
        <br />
      <% } %>
      <% if (page.author) { %>
        by <span><%= page.author %></span>
      <% } %>
    </small>
  </header>
  <section>
    <%- page.content %>
  </section>
</article>
<article>
    <header>
        <% if (page.photos && page.photos.length){ %>
            <figure>
                <% page.photos.forEach(function(photo, i){ %>
                    <img src="<%- url_for(photo) %>" itemprop="image">
                <% }) %>
            </figure>
        <% } %>

        <time datetime="<%= date_xml(page.date) %>" itemprop="datePublished"><%= date(page.date) %></time>

        <% if (page.author) { %>
            by <%= page.author %>
        <% } %>

        <% if (page.tags && page.tags.length) { %>
            <%- list_tags(page.tags, { show_count: false, class: 'article-tag' }) %>
        <% } %>
        
        <h1><%= page.title %></h1>
    </header>

    <%- page.content %>    
</article>
